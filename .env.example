# Environment Variables Template
# Copy this to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3001

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Voice/Speech APIs
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Email Service (for license emails)
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Mailchimp (for newsletter)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id
MAILCHIMP_SERVER=us1

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PostHog Analytics
POSTHOG_API_KEY=phc_your_posthog_key
POSTHOG_HOST=https://us.i.posthog.com

# AWS S3 (for downloads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=rinawarp-downloads

# Database (if using)
DATABASE_URL=postgresql://user:password@localhost:5432/rinawarp

# JWT Secret (for authentication)
JWT_SECRET=your_super_secure_jwt_secret_key_here

# GitHub (for Lighthouse CI)
LHCI_GITHUB_APP_TOKEN=your_github_app_token
